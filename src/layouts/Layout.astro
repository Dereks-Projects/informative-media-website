---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="/images/socialcard-informativemedia.png">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://www.informativemedia.com">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/favicon-informativemedia.png">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <!-- Google Analytics -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-X91B1BDREQ"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-X91B1BDREQ');
  </script>
</head>
<body>
  <Header />
  <slot />
  <Footer />
</body>
</html>